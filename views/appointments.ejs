    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>

<body>
    <!-- NAV-BAR -->
    <header>
        <nav class=" p-0 navbar navbar-expand-lg bg-light navbar text-light fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" href="/"><img src="/images/navbar_brand.png" alt="" height="60"
                        class="d-inline-block ">&nbsp;&nbsp;</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <a class="nav-link" aria-current="page" href="/">Home</a>
                        <a class="nav-link " href="/services">Services</a>
                        <a class="nav-link active" href="/appointments">Appointments</a>
                        <a class="nav-link " href="/gallery">Gallery</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main>
        <!--BOOKING PAGE GREETING-->
        <div class="pt-4 mb-5 container">
            <div class=" mb-5">
                <div class="m0 p0">
                    <div class="row justify-content-center">
                        <div class="row">
                            <!--BOOKING SUCCESS - DISPLAY GREEN BANNER IF APPOINTMENT MESSAGE WAS SENT-->
                            <% if (booked == true) { %>
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    <strong>Done!</strong> Your inquiry was successfully sent! Please allow up to 24 hours for a response.
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                  </div>
                            <% } %>
                            <div class="col-sm-12 col-md-6">
                                <div class="row">
                                    <div class="col-6 mt-2 ps-0 d-flex justify-content-center">
                                        <p class="text-center">üìç<a href="https://maps.app.goo.gl/28Um2iiCtRCxiyXv5">The
                                                Bush, Dungannon</a>
                                        </p>
                                    </div>
                                    <div class="col-6 mt-2 pe-0 d-flex justify-content-center">
                                        <a href="https://wa.me/447730746148"><img
                                                src="/images/contact_icons/whatsapp_48.png" style="height: 22px;"
                                                alt=""></a>
                                        <a href=""><img src="/images/contact_icons/messenger_48.png"
                                                style="height: 22px;" alt=""></a>
                                        <a
                                            href="https://www.facebook.com/people/Sandras-Dog-Grooming-Studio/100072379392138/"><img
                                                src="/images/contact_icons/facebook_48.png" style="height: 20px;"
                                                alt=""></a>
                                        <a href="https://www.instagram.com/sandraluka?igsh=ZTdkc3JhY2Ntb3pl"><img
                                                src="/images/contact_icons/insta_48.png" style="height: 22px;"
                                                alt=""></a>
                                    </div>
                                </div>
                                <h1 class="text-center">Book an Appointment or Make an Enquiry</h1>
                                <p class="text-center">
                                    For bookings or further information about the available grooming services, please
                                    get in touch using the contact details provided below. Appointment dates and times
                                    will be accommodated as best as possible to suit your availability.
                                </p>
                                <div class="card text-center p-4 mb-4 shadow-sm">
                                    <h5 class="mb-3">Book Now</h5>
                                    <p class="mb-3">Get in touch quickly using WhatsApp or Facebook Messenger.</p>
                                    <div class="d-flex justify-content-center gap-3">
                                      <a href="https://wa.me/447700900123" target="_blank" class="btn btn-success">
                                        <i class="bi bi-whatsapp"></i> WhatsApp
                                      </a>
                                      <a href="https://m.me/yourpageusername" target="_blank" class="btn btn-primary">
                                        <i class="bi bi-messenger"></i> Messenger
                                      </a>
                                    </div>
                                  </div>
                            </div>
                            
                            <div class="col-sm-12 col-md-6 d-flex justify-content-center">
                                <img src="/images/canva-blob4.png" class="img-fluid w-75" alt="">
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <h2>Online Inquiry</h2>
                </div>
                <div class="col-sm-12 d-flex justify-content-center">
                    <form action="/newinquiry" method="POST" class="w-100">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" name="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" class="form-control" name="email" placeholder="name@example.com">
                        </div>
                        <div class="mb-3">
                            <label for="tel" class="form-label">Contact Number</label>
                            <input type="tel" class="form-control" name="tel">
                        </div>
                        <div class="mb-3">
                            <label for="dog_breed" class="form-label">Pet's Name</label>
                            <input type="text" class="form-control" name="dog_breed">
                        </div>
                        <div class="mb-3">
                            <label for="notes" class="form-label">Service Inquiry or Message</label>
                            <textarea class="form-control" name="notes" rows="3"></textarea>
                            <!-- HONEYPOT -->
                            <input type="text" name="website" style="display:none" autocomplete="off" tabindex="-1" />

                        </div>
                        
                        <div class="d-flex justify-content-end me-4">
                            <button class="btn btn-custom" type="submit">Submit</button>

                        </div>
                    </form>

                </div>
            </div>
        </div>




    <!--FOOTER-->
    <footer class="bg-dark text-white py-3 mt-0">
        <div class="container">
          <div class="row">
            <div class="col-6 text-start">
              <p>
                Sandra's Dog Grooming<br> 
                Caring, Experienced Grooming for Every Breed
              </p>
            </div>
            <div class="col-6 text-end">
              <p>
                The Bush, Dungannon<br>
                <a href="tel">+44 7730 746148</a>
              </p>
            </div>
          </div>
          <div class="col-12 text-center fs-6 ">
            <p class="mb-1">&copy; 2025 Sandra's Dog Grooming. All rights reserved.</p>
          </div>
        </div>
      </footer>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </main>
</html>